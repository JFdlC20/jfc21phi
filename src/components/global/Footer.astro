---
// components
import Container from "../elements/Container.astro";
import Heading from "../elements/Heading.astro";
import Text from "../elements/Text.astro";
import Link from "../elements/Link.astro";

const base = import.meta.env.BASE_URL === '/' ? '' : import.meta.env.BASE_URL;

// links
const socials = [
    { title: "Linkedin", href: "https://www.linkedin.com/in/jesús-fuentes-de-la-cruz-a3941b1a5" },
    { title: "Instagram", href: "https://instagram.com/jfc21phi" },
];

const navLinks = [
    { title: "Inicio", href: `${base}/` },
    { title: "Trabajos", href: `${base}/works` },
    { title: "Sobre mí", href: `${base}/about` },
    { title: "Contacto", href: `${base}/contact` }
]
---

<Container variant={'xl'} class="mt-32 pb-8">
    <div class="flex flex-col gap-10 md:flex-row">
        <div class="flex-1 md:text-left text-center">
            <Heading tagName="h3" tagSize="h4" class="text-base-900 mb-5">Redes sociales</Heading>
            <ul>
                {
                    socials.map((social) => (
                        <li><Link variant={'nav'} href={social.href}>{social.title}</Link></li>
                    ))
                }
            </ul>
        </div>
        <div class="flex-1 md:text-right text-center">
            <Heading tagName="h3" tagSize="h4" class="text-base-900 mb-5">Navegación</Heading>
            <ul>
                {
                    /* AQUÍ ESTABA EL ERROR: Cambiado navigation por navLinks */
                    navLinks.map((navLink) => (
                        <li><Link variant={'nav'} href={navLink.href}>{navLink.title}</Link></li>
                    ))
                }
            </ul>
        </div>
    </div>
    <div class="flex flex-col text-center">
        <Text variant={'sm'} class="text-base-900">Jesús Fuentes © 2025 All Rights Reserved</Text>
        <Text variant={'sm'} class="text-base-900">Built with <Link variant={'inline'} href="https://astro.build">Astro</Link> design by <Link variant={'inline'} href="https://jessgaspar.dev">Jess Gaspar</Link></Text>
    </div>
</Container>